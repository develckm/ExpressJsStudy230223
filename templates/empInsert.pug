extends layout.pug
block content
    script(src="/js/emp/insert.js", defer=true )
    style.
        form[name=empInsertForm] input{
            border-top-style: none;
            border-left-style: none;
            border-right-style: none;
        }
        form[name=empInsertForm] input:focus {
            outline-style: none;
        }
        .inputCont.error{
            color: darkred;
        }
        .inputCont.success {
            color: seagreen;
        }
        .inputCont.success input{
            border-color: seagreen;
        }
        .inputCont.error input{
            border-color: darkred;
        }
    main
        h1 사원 등록 폼
        form(name="empInsertForm",action="/emp/insert.do",method="POST")
            div.inputCont
                p
                    span 사번 :
                    input(value="",name="empno")
                p#empnoMsg
            div.inputCont
                p
                    span 이름 :
                    input(value="",name="ename")
                p#enameMsg
            div.inputCont
                p
                    span 직책 :
                    input(value="",name="job")
                p#jobMsg
            div.inputCont
                p
                    span 급여 :
                    input(value="", name="sal")
                p#salMsg
            div.inputCont
                p
                    span 상여급 :
                    input(value="", name="comm")
                p#commMsg
            p
                span 입사일 :
                -const now=new Date()
                -let y=now.getUTCFullYear();
                -let m=now.getUTCMonth()+1;
                -m=(m<10)?`0${m}`:m;
                -let d=now.getUTCDate();
                -d=(d<10)?`0${d}`:d;
                -let nowStr=`${y}-${m}-${d}`;
                input(type="date", name="hiredate", value=nowStr)
                //input(type="datetime-local" value="2023-02-23T12:30")
            div.inputCont
                p
                    span 상사 :
                    input(value="", name="mgr")
                p#mgrMsg
            div.inputCont
                p
                    span 부서 :
                    input(value="",name="deptno")
                p#deptnoMsg
            p
                button(type="submit") 등록제출
